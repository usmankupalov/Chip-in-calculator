<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <servlet>
        <servlet-name>UserServlet</servlet-name>
        <servlet-class>com.example.restapi2.servlet.UserServlet</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>UserServlet</servlet-name>
        <url-pattern>/users/</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ContributionOfUserForEventServlet</servlet-name>
        <servlet-class>com.example.restapi2.servlet.ContributionOfUserForEventServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>ContributionOfUserForEventServlet</servlet-name>
        <url-pattern>/contribution/for_holiday/</url-pattern>
    </servlet-mapping>

</web-app>